{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "outDir": "./dist",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["node", "jest"],
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}